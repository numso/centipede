*
    padding: 0
    margin: 0
    background-color: rgb(29,29,29)

.gameScreen
    font-family: 'Monofett', cursive
    font-size: 220%

.mainMenu
    text-align: center
    padding-top: 50px


.menuButton
    margin: 0 auto
    width: 220px
    height: 40px
    background-color: rgb(55, 55, 55)
    color: rgb(148, 6, 6)
    margin-bottom: 10px
    cursor: pointer
    border-radius: 8px
    border: solid 1px; 

    &:hover
        background-color: rgb(29, 29, 29)

.back
    margin: 0 auto;
    text-align: center;
    width: 100px

.text
    color: rgb(148, 6, 6)
    font-size: 175%

.credText
    padding-top: 50px
    padding-left: 30px

.title
    font-size: 250%