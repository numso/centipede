extends ../layout

block content

  #impress
    .step#slide-menu(data-x=0, data-y=0)
      include ../public/menu
    .step#slide-game(data-x=0, data-y=1000, data-rotate-x=180, data-rotate-z=180)
      include ../public/game
    .step#slide-scores(data-x=1000, data-y=0, data-z=300, data-rotate-y=-90)
      include ../public/scores
    .step#slide-settings(data-x=-1000, data-y=0, data-z=300, data-rotate-y=90)
      include ../public/settings
    .step#slide-credits(data-x=0, data-y=500, data-z=2000)
      include ../public/credits

  .user-obj= JSON.stringify(user)
